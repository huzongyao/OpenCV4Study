<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/back_rect_round"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/opencv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Version: 1.0.0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_face_detect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/face_detect_demo" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_blur_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/blur_bitmap" />
    </LinearLayout>

</ScrollView>